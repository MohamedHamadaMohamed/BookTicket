@model List<Cinema>
<br />

<div class="row">
    <div class="col-10">
        <h1>All Cinemas</h1>
    </div>
    <div class="col-2">
        <a href="/Cinema/Create" class="btn btn-light"><i class="bi bi-plus-circle"></i> Add New Cinema</a>
    </div>
</div>
<br />
<table class="table" style="border:solid; text-align:center">
    <thead class="table-dark">
        <tr>
            <th scope="col" style="text-align:center">ID</th>
            <th scope="col" style="text-align:center">Name</th>
            <th scope="col" style="text-align:center">Description</th>
            <th scope="col" style="text-align:center">Address</th>
            <th scope="col" style="text-align:center">Movies</th>
            <th scope="col" style="text-align:center">Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="border:solid">
                <td scope="row" style="border:solid">@item.Id</td>
                <td scope="row" style="border:solid">@item.Name</td>
                <td scope="row" style="border:solid" width="30%">@item.Description</td>
                
                <td scope="row" style="border:solid">@item.Address</td>
                <td scope="row" style="border:solid"><a href="/Cinema/SCinema?CinemaId=@item.Id">All Movies</a></td>
                <td><a href="/Cinema/Edit?CinemaId=@item.Id" class="btn btn-primary "><i class="bi bi-pencil-square"></i> Edit</a> <a href="/Cinema/Delete?CinemaId=@item.Id" onclick="return confirm('are you sure?')" class="btn btn-primary "><i class="bi bi-trash"></i> Delete</a></td>

            </tr>
        }
    </tbody>
</table>