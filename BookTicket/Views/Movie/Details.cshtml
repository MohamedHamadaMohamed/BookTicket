@using BookTicket.Data.Enums;
@using BookTicket.Models;

@model Movie
<br/>
<table>
    <tr>
        <h1>@Model.Name</h1>
    </tr>
    <tr>
        <div class="row">
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="~/Images/movies/@Model.ImgUrl" class="img-fluid rounded-start" alt="@Model.ImgUrl">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">

                            <p class="card-text">@Model.Description</p>
                            <p class="card-text">price : <span class="badge bg-info">@Model.Price</span></p>
                            <p class="card-text">Cinema: @Model.Cinema.Name</p>
                            <p class="card-text">Start Date: @Model.StartDate</p>
                            <p class="card-text">End Date: @Model.EndDate</p>
                            <p class="card-text">Category: <a href="/Category/SCategory?CategoryId=@Model.Id" style="color:blue">@Model.Category.Name</a></p>
                            
                            @foreach (var item in ViewBag.actors)
                            {
                                <a href="/Actor/Details?ActorId=@item.Id"> <img src="~/Images/cast/@item.ProfilePicture" alt="Alternate Text" /> </a>
                            }
                            <br/>
                            <br />
                            @if (Model.MovieStatus == MovieStatus.Available)
                            {
                                <a class="btn btn-outline-success">Book Ticket</a>
                            }
                            else
                            {
                                <button disabled class="btn btn-outline-success" style=" color:black ;background-color: slategray">Book Ticket</button>

                            }
                            <br/>

                            <div class="video-container">
                                <iframe width="300"  src="@Model.TrailerUrl" ></iframe>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </tr>
</table>

