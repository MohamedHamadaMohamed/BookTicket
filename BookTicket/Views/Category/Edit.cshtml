@model Category

<div class="row mt-2">
    <h1><a href="/Category/Index"><i class="bi bi-arrow-left"></i> </a>  Edit Category @Model.Name</h1>
</div>
<div class="row">
    <form action="/Category/Edit" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Category Name</label>
            <input type="text" class="form-control" id="name" value="@Model.Name" name="Name" placeholder="Category Name">
            <input type="hidden" name="Id" value="@Model.Id" />
        </div>
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
        <br />
        <button type="submit" class="btn btn-primary">Save</button>

    </form>

</div>